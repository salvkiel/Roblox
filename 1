-- By Salvkiel | GUI & logic by ChatGPT (2025)
-- üí° Gunakan hanya di server dengan FE OFF

-- üîß SERVICE
local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- üîπ GUI UTAMA
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AdminPanelGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 300)
frame.Position = UDim2.new(0.4, -110, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

local title = Instance.new("TextLabel")
title.Text = "‚öôÔ∏è Admin Control Panel"
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.Parent = frame

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0, 5)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Parent = frame
layout.FillDirection = Enum.FillDirection.Vertical

local padding = Instance.new("UIPadding")
padding.PaddingTop = UDim.new(0, 40)
padding.Parent = frame

-- üîπ Utility Fungsi
local function makeButton(name, color)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0.9, 0, 0, 30)
	button.BackgroundColor3 = color or Color3.fromRGB(60, 60, 60)
	button.TextColor3 = Color3.fromRGB(255, 255, 255)
	button.Font = Enum.Font.GothamBold
	button.TextSize = 14
	button.Text = name
	button.AutoButtonColor = true
	local bCorner = Instance.new("UICorner")
	bCorner.CornerRadius = UDim.new(0, 8)
	bCorner.Parent = button
	button.Parent = frame
	return button
end

local function getAllPlayers()
	local all = {}
	for _,p in pairs(Players:GetPlayers()) do
		if p ~= player then
			table.insert(all, p)
		end
	end
	return all
end

-- üß± 1. CLEAR MAP
makeButton("üß± Clear Map").MouseButton1Click:Connect(function()
	for _,v in pairs(workspace:GetChildren()) do
		if not v:IsA("Terrain") and not v:IsDescendantOf(player.Character) and not v:IsA("Camera") then
			v:Destroy()
		end
	end
end)

-- üíÄ 2. KILL ALL
makeButton("üíÄ Kill All Players").MouseButton1Click:Connect(function()
	for _,p in pairs(getAllPlayers()) do
		if p.Character and p.Character:FindFirstChild("Humanoid") then
			p.Character.Humanoid.Health = 0
		end
	end
end)

-- üöÄ 3. TELEPORT ALL
makeButton("üöÄ Teleport All to Me").MouseButton1Click:Connect(function()
	local myHRP = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if myHRP then
		for _,p in pairs(getAllPlayers()) do
			if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
				p.Character:MoveTo(myHRP.Position + Vector3.new(0,5,0))
			end
		end
	end
end)

-- üå™Ô∏è 4. FLING ALL
makeButton("üå™Ô∏è Fling All Players").MouseButton1Click:Connect(function()
	local myHRP = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if not myHRP then return end
	for _,p in pairs(getAllPlayers()) do
		if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
			local target = p.Character.HumanoidRootPart
			target.Velocity = Vector3.new(0, 300, 0)
		end
	end
end)

-- üßä 5. FREEZE ALL
makeButton("üßä Freeze All Players").MouseButton1Click:Connect(function()
	for _,p in pairs(getAllPlayers()) do
		if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
			p.Character.HumanoidRootPart.Anchored = true
		end
	end
end)

-- üîì 6. UNFREEZE ALL
makeButton("üîì Unfreeze All").MouseButton1Click:Connect(function()
	for _,p in pairs(getAllPlayers()) do
		if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
			p.Character.HumanoidRootPart.Anchored = false
		end
	end
end)

-- ‚òÄÔ∏è 7. CHANGE LIGHTING
makeButton("‚òÄÔ∏è Toggle Lighting").MouseButton1Click:Connect(function()
	if Lighting.TimeOfDay == "00:00:00" then
		Lighting.TimeOfDay = "14:00:00"
		Lighting.Brightness = 2
	else
		Lighting.TimeOfDay = "00:00:00"
		Lighting.Brightness = 10
	end
end)

-- ü™Ñ 8. SPAWN PLATFORM
makeButton("ü™Ñ Spawn Platform").MouseButton1Click:Connect(function()
	local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if not hrp then return end
	local part = Instance.new("Part")
	part.Size = Vector3.new(15,1,15)
	part.Anchored = true
	part.Position = hrp.Position - Vector3.new(0,4,0)
	part.Color = Color3.fromRGB(0, 200, 200)
	part.Parent = workspace
end)

-- üñºÔ∏è 9. GIVE ALL GUI MESSAGE
makeButton("üñºÔ∏è Give All GUI").MouseButton1Click:Connect(function()
	for _,p in pairs(getAllPlayers()) do
		local gui = Instance.new("ScreenGui", p.PlayerGui)
		local label = Instance.new("TextLabel", gui)
		label.Size = UDim2.new(1, 0, 1, 0)
		label.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
		label.BackgroundTransparency = 0.5
		label.TextColor3 = Color3.fromRGB(255, 0, 0)
		label.Font = Enum.Font.GothamBlack
		label.TextScaled = true
		label.Text = "‚ö†Ô∏è SERVER CONTROLLED BY ADMIN ‚ö†Ô∏è"
		task.delay(5, function() gui:Destroy() end)
	end
end)

-- üß† 10. DISABLE ALL SERVER SCRIPTS
makeButton("üß† Disable All Scripts").MouseButton1Click:Connect(function()
	local containers = {game.ServerScriptService, game.ReplicatedStorage, workspace}
	for _,container in pairs(containers) do
		for _,s in pairs(container:GetDescendants()) do
			if s:IsA("Script") then
				s.Disabled = true
			end
		end
	end
end)

print("[‚úÖ Admin Control Panel Loaded | FE-OFF functions active]")
