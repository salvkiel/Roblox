-- üîΩ AUTO FARM SYSTEM (Tombol SUMMIT) üîΩ
local player = game.Players.LocalPlayer
local teleporting = false

-- üìç Titik-titik teleportasi
local teleportPoints = {
    Vector3.new(-62.219, 61.272, -1012.715),
    Vector3.new(-518.263, 31.418, -1449.677),
    Vector3.new(-1098.454, 99.032, -1666.814),
    Vector3.new(-1384.369, 91.197, -2035.763),
    Vector3.new(-1961.388, 20.663, -2010.37),
    Vector3.new(-2317.07, 183.819, -2410.748),
    Vector3.new(-2692.163, 236.241, -2892.914),
    Vector3.new(-3001.781, 376.222, -3349.222),
    Vector3.new(-3702.666, 666.001, -4244.088),
    Vector3.new(-3904.514, 826.714, -5038.68),
    Vector3.new(-3728.446, 949.734, -5453.592),
    Vector3.new(-3140.74, 1281.464, -6435.697),
    Vector3.new(-2533.653, 1579.135, -6521.36),
    Vector3.new(-2289.774, 1750.859, -7903.055),
    Vector3.new(-2364.218, 2064.646, -9753.298),
    Vector3.new(-2437.124, 2137.905, -10295.655), -- Puncak
}
local basecamp = Vector3.new(47.406, 8.707, 314.532)

-- ‚ö° Fungsi teleport
local function teleportTo(pos)
    local char = player.Character or player.CharacterAdded:Wait()
    if char and char:FindFirstChild("HumanoidRootPart") then
        char.HumanoidRootPart.CFrame = CFrame.new(pos)
    end
end

-- üîÅ Fungsi utama auto farm
local function startAutoFarm()
    if teleporting then return end
    teleporting = true
    print("üöÄ Mulai auto farm summit...")

    for i, pos in ipairs(teleportPoints) do
        teleportTo(pos)
        print("Teleport ke Posisi " .. i)
        task.wait(2) -- jeda antar teleport
    end

    print("üèîÔ∏è Puncak tercapai! Respawn ke Basecamp...")
    teleportTo(basecamp)
    teleporting = false
end

-- üñ±Ô∏è Jalankan saat tombol ditekan
script.Parent.MouseButton1Click:Connect(function()
    if not teleporting then
        startAutoFarm()
    else
        warn("‚è≥ AutoFarm sedang berjalan...")
    end
end)


local function toggleAutoFarm(state)
    teleporting = state
    statusValue.Value = state
    if teleporting then
        button.Text = "RUNNING..."
        button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
        task.spawn(autoFarmLoop)
    else
        button.Text = "RUNNING..."
        button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    end
end

button.MouseButton1Click:Connect(function()
    toggleAutoFarm(not teleporting)
end)
