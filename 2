---------------------------------------------------------------------
-- üîΩ SERVICE YANG DIGUNAKAN üîΩ
---------------------------------------------------------------------
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer

---------------------------------------------------------------------
-- üîπ PAKSA STREAMING RADIUS GLOBAL
---------------------------------------------------------------------
pcall(function()
	if Workspace.StreamingEnabled then
		Workspace.StreamingTargetRadius = math.huge
		Workspace.StreamingMinRadius = math.huge
		print("[‚öôÔ∏è] Streaming radius diperluas tanpa batas.")
	else
		print("[‚ÑπÔ∏è] Streaming mode tidak aktif, semua posisi sudah termuat.")
	end
end)

---------------------------------------------------------------------
-- üîπ FUNGSI POSISI AMAN PEMAIN
---------------------------------------------------------------------
local function getSafePosition(targetPlayer)
	if not targetPlayer.Character then return nil end

	local hrp = targetPlayer.Character:FindFirstChild("HumanoidRootPart")

	-- Jika belum termuat (karena streaming)
	if not hrp and Workspace.StreamingEnabled then
		targetPlayer.Character:WaitForChild("HumanoidRootPart", 1)
		hrp = targetPlayer.Character:FindFirstChild("HumanoidRootPart")
	end

	if hrp then
		return hrp.Position
	else
		local primary = targetPlayer.Character.PrimaryPart
		return primary and primary.Position or nil
	end
end

---------------------------------------------------------------------
-- üîπ GUI UTAMA
---------------------------------------------------------------------
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PlayerDetectorGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 260, 0, 420)
frame.Position = UDim2.new(0, 20, 0.5, -210)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
